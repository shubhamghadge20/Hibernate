<hibernate-mapping>
<class name="Mypack.Employee" table="Table_one">
<id name="eid">
<generator class="increment"/>
</id>
<property name="ename"/>
<property name="email"/>
<one-to-one name="address" cascade="all"> </one-to-one>
</class>
<class name="Mypack.Address" table="TableAddr_one">
<id name="id">
<generator class="foreign">
<param name="property">employee</param>
</generator>
</id>
<property name="city"/>
<property name="state"/>
<property name="country"/>
<one-to-one name="employee"/>
</class>
</hibernate-mapping>